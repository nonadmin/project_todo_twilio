<div class="container">

  <% flash.each do |type, message| %>
    
    <% unless type == "id" %>

      <div class="alert alert-<%= type %> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        <%= message %>
      </div>

    <% end %>

  <% end %>

</div>